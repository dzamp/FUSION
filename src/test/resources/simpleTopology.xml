<topology>
    <name>WordCountTopology</name>
    <config>
        <topology.debug>true</topology.debug>
        <topology.workers>1</topology.workers>
    </config>
    <bolts>
        <bolt>
            <id>bolt-1</id>
                <className>algorithms.ObjectCounter</className>
            <parallelism>2</parallelism>
        </bolt>

    </bolts>

    <spouts>
        <spout>
            <id>spout-1</id>
                <className>algorithms.RandomWordSpout</className>
            <parallelism>2</parallelism>

            <!--<emmitedFields>-->
                <!--<emmitedField>word</emmitedField>-->
            <!--</emmitedFields>-->
        </spout>
    </spouts>

    <streams>
        <stream>
            <name>spout-1 --> bolt-1</name>
            <from>spout-1</from>
            <to>bolt-1</to>
           <grouping>
               <!--<name>spout-1 &ndash;&gt; bolt-1</name>-->
               <type>FIELDS</type>
               <args>
                   <arg>word</arg>
               </args>
           </grouping>
        </stream>
    </streams>

</topology>