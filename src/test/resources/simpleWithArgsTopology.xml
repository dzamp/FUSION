<topology>
    <name>WordCountTopology</name>
    <bolts>
        <bolt>
            <id>bolt-1</id>
                <className>algorithms.ObjectCounter</className>
            <parallelism>2</parallelism>
        </bolt>
    </bolts>

    <spouts>
        <spout>
            <id>spout-1</id>
                <className>algorithms.RandomWordSpout</className>
            <parallelism>2</parallelism>
            <constructorArgs>
                <constructorArg>word</constructorArg>
            </constructorArgs>
            <!--<emmitedFields>-->
                <!--<emmitedField>word</emmitedField>-->
            <!--</emmitedFields>-->
        </spout>
    </spouts>

    <streams>
        <stream>
            <name>spout-1 --> bolt-1</name>
            <from>spout-1</from>
            <to>bolt-1</to>
           <grouping>
               <name>spout-1 --> bolt-1</name>
               <type>FIELDS</type>
               <args>
                   <arg>words</arg>
               </args>
           </grouping>
        </stream>
    </streams>

</topology>